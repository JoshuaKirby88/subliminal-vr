<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@drawable/layout_bg">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subliminal Message Tester"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="24dp"/>

    <!-- Settings Menu -->
    <LinearLayout
        android:id="@+id/settings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="24sp"
            android:textColor="#CCCCCC"
            android:layout_marginBottom="16dp"/>

        <!-- Duration Slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Duration (ms):"
                android:textColor="#FFFFFF"/>
            <SeekBar
                android:id="@+id/duration_slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="185"
                android:progress="85"/> <!-- 15 + 85 = 100ms default -->
            <TextView
                android:id="@+id/duration_value_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:maxLines="1"
                android:text="100"
                android:textColor="#FFFFFF"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Background Selector -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Background:"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/background_selector_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Indoor room"
                android:background="@drawable/button_bg"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"/>
        </LinearLayout>

        <!-- Display Type Selector -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Display Type:"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/display_type_selector_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Black void, white letters"
                android:background="@drawable/button_bg"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"/>
        </LinearLayout>

        <!-- Forward Mask Duration -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Forward Mask (10-200 ms):"
                android:textColor="#FFFFFF"/>
            <SeekBar
                android:id="@+id/forward_mask_slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="200"
                android:progress="50"/>
            <TextView
                android:id="@+id/forward_mask_value_text"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="50 ms"
                android:textColor="#FFFFFF"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Backward Mask Duration -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Backward Mask (10-250 ms):"
                android:textColor="#FFFFFF"/>
            <SeekBar
                android:id="@+id/backward_mask_slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="250"
                android:progress="150"/>
            <TextView
                android:id="@+id/backward_mask_value_text"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="150 ms"
                android:textColor="#FFFFFF"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Repetition Slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Repetitions:"
                android:textColor="#FFFFFF"/>
            <SeekBar
                android:id="@+id/repetition_slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="9"
                android:progress="0"/> <!-- 1 + 0 = 1 default -->
            <TextView
                android:id="@+id/repetition_value_text"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#FFFFFF"
                android:gravity="end"/>
        </LinearLayout>

        <Button
            android:id="@+id/start_button"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:text="START TEST"
            android:background="@drawable/button_bg"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- Testing Phase (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/testing_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which message did you see?"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/guess_button_1"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp"
            android:text="Option 1"
            android:background="@drawable/button_bg"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/guess_button_2"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp"
            android:text="Option 2"
            android:background="@drawable/button_bg"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/guess_button_3"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginBottom="24dp"
            android:text="Option 3"
            android:background="@drawable/button_bg"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>
    </LinearLayout>

    <!-- Result Phase (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/result_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CORRECT!"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="#00FF00"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/reset_button"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:text="BACK TO MENU"
            android:background="@drawable/button_bg"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>
